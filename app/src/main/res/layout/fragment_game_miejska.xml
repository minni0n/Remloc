<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:orientation="vertical"
    tools:context=".HomeFragments.GameMiejskaFragment">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:text="Welcome to"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/game_miejska"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/cityGamesSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?colorPrimaryVariant"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <Button
        android:id="@+id/startGameBtn"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_height="wrap_content"
        android:text="Start game" />


    <LinearLayout
        android:background="@drawable/border"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="Your scores:"/>

        <TextView
            android:background="@drawable/border_miejsce"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/yourScores"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poznan - 99\n Warszawa -10" />

    </LinearLayout>


</LinearLayout>