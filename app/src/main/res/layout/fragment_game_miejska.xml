<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:text="@string/welcome_to"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="@string/city_game"/>

        <View
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wybierz miejsce grzy "/>
            <Spinner
                android:id="@+id/cityGamesSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?colorPrimaryVariant"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <Button
            android:id="@+id/startGameBtn"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_height="wrap_content"
            android:text="@string/start_game" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />


        <LinearLayout
            android:id="@+id/scoresLayout"
            android:background="@drawable/bg_round_pastel_gray"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="@string/your_scores"/>

            <ListView
                android:id="@+id/listOfScores"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/place_score"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>