<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_gray"
    android:orientation="vertical"

    tools:context=".AddDataFragment.AddActionFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/places_spinner"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/typeOfActionSpinner"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"/>


    <Spinner
        android:id="@+id/contacts_spinner"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <EditText
        android:id="@+id/smsText"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_text_message"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/btnSaveAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/save_action" />


</LinearLayout>